<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.xwpeng.tbug.MainActivity"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/java_crash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="java_carsh" />

    <Button
        android:id="@+id/native_crash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="native_carsh"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/anr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="anr"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/anr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="anr2"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/read_crash_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="read_crash_log"
        android:layout_marginTop="10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >
    <TextView
        android:id="@+id/crash_log_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        />
    </ScrollView>

</LinearLayout>
